extends layout

block content
  link(rel="stylesheet", href="/stylesheets/map.css")
  link(rel="stylesheet", href="/stylesheets/home.css")
  link(rel="stylesheet", href="/stylesheets/test.css")
  script(src="/javascripts/map.js")
  script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCDisIjvcok9Z6WtoPPNA7PLzXoRf7B4rw&region=KR" async defer)
  
  <!-- 큰 카테고리 지도-->
  div#subcategory
  h1 당신에게 추천하는 장소는?
  div#map(style="width:100%;height:350px;")
  hr

  div#all(align:center)
    div#subcat1
        <!--img.max-small(src='/images/movie.PNG' id='place')-->
        <!--h3(style="font-family: 'Noto Sans KR', sans-serif;") 영화관-->
    div#subcat2
        <!--img.max-small(src='/images/movie.PNG' id='place')-->
        <!--h3(style="font-family: 'Noto Sans KR', sans-serif;") 수영장-->

  br
  a(name="target1")
    <!-- 작은 카테고리1 필터랑 목록 -->
    div(style="height: 2em;")
    div#filter
      #sub
      span 필터　
      i.fas.fa-list
      button.btn.h-100(id=search type="button" onclick="sorting_name()") 가나다 순 
        i.fas.fa-sort-alpha-down
      button.btn.h-100(type="button" onclick="sorting_dis()") 거리 순 
        i.fas.fa-map-marked-alt
      button.btn.h-100(type="button" onclick="sorting_like()") 인기 순 
        i.fas.fa-thumbs-up
    ul.list-group(id='output')
  
  a(name="target2")
    <!-- 작은 카테고리2 필터랑 목록 -->
    br
    div(style="height: 2em;")
    div#filter
      #sub2
      span 필터　
      i.fas.fa-list
      button.btn.h-100(id=search type="button" onclick="sorting_name2()") 가나다 순 
        i.fas.fa-sort-alpha-down
      button.btn.h-100(type="button" onclick="sorting_dis2()") 거리 순 
        i.fas.fa-map-marked-alt
      button.btn.h-100(type="button" onclick="sorting_like2()") 인기 순 
        i.fas.fa-thumbs-up
    ul.list-group(id='output2')